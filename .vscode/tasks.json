{
	// See https://go.microsoft.com/fwlink/?LinkId=733558
	// for the documentation about the tasks.json format
	"version": "2.0.0",
	"tasks": [
		{
			"label": "Rust: cargo doc",
			"type": "shell",
			"command": "cargo",
			"args": [
				"doc",
				"--open"
			],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": []
		},
		{
			"label": "Rust: cargo build",
			"type": "shell",
			"command": "cargo",
			"args": [
				"build"
			],
			"presentation": {
				"echo": false,
				"reveal": "silent",
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": "$rustc",
			"group": {
				"kind": "build",
				"isDefault": true
			}
		},
		{
			"label": "Rust: cargo run",
			"type": "shell",
			"command": "cargo",
			"args": [
				"run"
			],
			"presentation": {
				"echo": false,
				"reveal": "never",
				"focus": false,
				"panel": "dedicated"
			},
			"problemMatcher": "$rustc",
		}
	]
}